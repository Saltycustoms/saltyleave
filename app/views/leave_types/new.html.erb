<div class="row">
  <div class="large-6 large-offset-3 columns">
    <% if @leave_type.errors.any? %>
      <div class="callout alert" id="error_explanation">
        <h4>
          <%= pluralize(@leave_type.errors.count, "error") %> prohibited this application from being saved:
        </h4>
        <ul>
          <% @leave_type.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= simple_form_for @leave_type do |f| %>
      <%= f.input :name, placeholder: 'e.g. Annual, Sick', error: false %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
