<h1>Add User</h1>

<div>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this application from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= simple_form_for :user, url: users_path do |f| %>
    <%= f.input :name %>
    <%= f.input :department %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.button :submit %>
  <% end %>

  <%= link_to 'Back', users_path %>
</div>
